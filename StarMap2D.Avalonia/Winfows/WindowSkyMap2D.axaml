<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:StarMap2D.Avalonia.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="StarMap2D.Avalonia.Winfows.WindowSkyMap2D"
        Name="WindowSkyMap2D"
        Title="WindowSkyMap2D"
        Width="800"
        Height="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Panel Background="DarkGray">
        <controls:Map2D
            Width="{Binding Height, ElementName=WindowSkyMap2D}"
            Height="{Binding Height, ElementName=WindowSkyMap2D}"
        />
        </Panel>
        <Label Grid.Column ="1" Content ="Right!" Width="100"/>
    </Grid>
</Window>
